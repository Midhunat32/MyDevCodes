<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:id="@+id/constraintlayoutmain"
        android:layout_height="match_parent"
        tools:context=".ui.activity.TransitionActivity">
    <!--<android.support.constraint.ConstraintLayout-->
            <!--android:id="@+id/constraintlayout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
    <ImageView
            android:src="@drawable/ic_back"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:cropToPadding="false"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop" android:id="@+id/ivBackground"/>

        <ImageView
                android:src="@drawable/ic_andro"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ivBackground"
                app:layout_constraintBottom_toBottomOf="@+id/ivBackground"
                android:id="@+id/ivSmall"/>
    <ScrollView android:layout_width="match_parent"
                android:id="@+id/scroll"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/ivSmall"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:id="@+id/tvText"
                android:fontFamily="4" android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/ivSmall" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="23dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>

    </ScrollView>



        <Button
                android:id="@+id/btnChange"
                android:background="@color/colorPrimary"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"/>


    </android.support.constraint.ConstraintLayout>


